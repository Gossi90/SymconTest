                {
                    "caption": "Visibility",
                    "type": "CheckBox",
                    "name": "VisibilitySingle",
                    "onChange": "SAT_ChangeParameter($id, 'ActionC', 'visible', $VisibilitySingle);",
                    "value": true
                },
                {
                    "caption": "Enable",
                    "type": "CheckBox",
                    "name": "EnableSingle",
                    "onChange": "SAT_ChangeParameter($id, 'ActionC', 'enabled', $EnableSingle);",
